{% extends "layout.njk" %}

{%block head %}
    <link rel="stylesheet" href="/styles.css">
    <title>Foodfy - {{recipe.title}}</title>
    <meta name="Foodfy - {{recipe.title}}" content="Food recipe" />
{% endblock %}

{% block content %}
    <section class="recipe-wrapper">
        <div class="foodDetails">
            <img src="{{recipe.image}}" alt="">
            <h1>{{recipe.title}}</h1>
            <p>{{recipe.author}}</p>
        </div>
        <div class="recipeDetails">
            <h2>Ingredientes</h2>
            <a class="button">ESCONDER</a>
        </div>
    </section>
{% endblock%}