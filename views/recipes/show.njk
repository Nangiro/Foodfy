{% extends "layout.njk" %}

{%block head %}
    <link rel="stylesheet" href="/styles.css">
    <title>Foodfy - {{recipe.title}}</title>
    <meta name="Foodfy - {{recipe.title}}" content="Food recipe" />
{% endblock %}

{% block content %}
    <section class="recipe-wrapper">
        <div class="recipeInfo">
            <img src="{{recipe.image}}" alt="">
            <h1>{{recipe.title}}</h1>
            <p>por {{recipe.author}}</p>
        </div>
        <div class="recipeDetails">
            <div class="detailsHeader">
                <h2>Ingredientes</h2>
                <a onclick="showHide(event)" class="button">MOSTRAR</a>
            </div>
            
            <div class="ingredients">
                <ul class="content hide">
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="recipeDetails">
            <div class="detailsHeader">
                <h2>Modo de Preparo</h2>
                <a class="button">MOSTRAR</a>
            </div>
            
            <div class="WayofPreparation">
                <ul class="content hide">
                    {% for preparation in recipe.preparation %}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </ul>
            </div>   
                
        </div>

        <div class="recipeDetails">
            <div class="detailsHeader">
                <h2>Informações adicionais</h2>
                <a class="button">MOSTRAR</a>
            </div>
            
            <div class="addInfo">
                <div class="content hide">
                    <p>{{recipe.information}}</p>
                </div>    
            </div>
        </div>
        
    </section>
    <script src="scripts.js"></script>
{% endblock%}